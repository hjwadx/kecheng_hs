<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="StatusBarBackground">
        <item name="android:background">@color/black</item>
    </style>

    <style name="XWindowTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Dialog_WindowFullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="Animations.PopDownMenu" parent="@style/Animations" />

    <style name="Animations.PopDownMenu.Left" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <style name="Animations.PopDownMenu.Right" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
    </style>

    <style name="Animations.PopDownMenu.Center" parent="@style/Animations.PopDownMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations" />

    <style name="Animations.PopUpMenu" parent="@style/Animations" />

    <style name="Animations.PopUpMenu.Left" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
    </style>

    <style name="Animations.PopUpMenu.Right" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
    </style> 

    <style name="Animations.PopUpMenu.Center" parent="@style/Animations.PopUpMenu">
        <item name="android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>
    
    <style name="Switch">
        <!-- <item name="track">@android:drawable/switch_track_holo_dark</item> -->
        <!-- <item name="android:thumb">@android:drawable/switch_inner_holo_dark</item> -->
        <item name="switchTextAppearance">@android:style/TextAppearance</item>
        <item name="android:textOn">@string/switch_on</item>
        <item name="android:textOff">@string/switch_off</item>
        <item name="thumbTextPadding">12dip</item>
        <item name="switchMinWidth">96dip</item>
        <item name="switchPadding">16dip</item>
    </style>
    
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
       <item name="android:progressDrawable">@drawable/my_rating_bar</item>
    </style>
    
    <style name="CourseDetailRatingBar" parent="@android:style/Widget.RatingBar">
       <item name="android:progressDrawable">@drawable/course_detail_rating_bar</item>
    </style>
    
    <style name="ThemeActivity">
		<item name="android:windowAnimationStyle">@style/AnimationActivity</item>
	</style>
	
    <style name="Widget.GifMoviewView" parent="@android:style/Widget"></style>
    
     <style name="Transparent" parent="@style/Theme.Sherlock.Light.NoActionBar">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>   
        <item name="android:windowAnimationStyle">@+android:style/Animation.Translucent</item>
    </style>
    <style name="Wrapper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="ImageView"/>
    
    <style name="ImageView.Menu_Core">
        <item name="android:layout_width">@dimen/home_menu_item_icon_size</item>
        <item name="android:layout_height">@dimen/home_menu_item_icon_size</item>
        <item name="android:layout_marginLeft">@dimen/home_menu_item_iamge_margin_left</item>
        <item name="android:layout_marginRight">@dimen/home_menu_item_iamge_margin_right</item>
    </style>
    
    <style name="TextView"/>
    
    <style name="ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>
    
    <style name="TranslucentTheme" parent="@style/Theme.Sherlock.Light.NoActionBar.FullScreen.Transparent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityCloseExitAnimation">@anim/slide_left_out</item>
    </style>
    
    <!-- view style -->
    
    <style name="SetUp_Layout" parent="@android:style/Animation">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="SetUp_Text_Title" parent="@android:style/Animation">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tag_text_unselected</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="SetUp_Text_Input" parent="@android:style/Animation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:drawableRight">@drawable/badge_preview_arrow</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/course_detail_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="SetUp_Text_Input_Two_Line" parent="@android:style/Animation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:textColor">@color/course_detail_content</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="style_horizontal_layout" parent="@android:style/Animation">
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/home_menu_core_item_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    
    <style name="style_horizontal_layout_with_click_effect" parent="@android:style/Animation">
        <item name="android:background">@color/white_item_selector_linearlayout_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/home_menu_core_item_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    
    <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/week_select_dialogbackground</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item> 
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="shadow_background">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item> 
        <item name="android:background">@drawable/bg_shadow</item>
        <item name="android:orientation">vertical</item>
    </style>
            
 </resources>