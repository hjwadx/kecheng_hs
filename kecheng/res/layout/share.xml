<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:background="@color/app_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="5dp"
        >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="160dp"
        android:layout_margin="8dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/white_bg_with_shadow" >

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignWithParentIfMissing="true"
            android:background="@null"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="120dp"
            android:gravity="top"
            android:lineSpacingExtra="3sp"
            android:maxLength="140"
            android:minHeight="150sp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/remain_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/content"
            android:layout_alignParentRight="true"
            android:text="还可以输入140个字"
            android:textColor="#787878"
            android:textSize="10sp" />
    </RelativeLayout>
    <fm.jihua.kecheng.ui.widget.SharePic
            android:id="@+id/share_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp" >

        <CheckBox
            android:id="@+id/renren"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="人人网"
            android:button="@drawable/selector_checkbox_checkmark"
            android:textColor="@color/share_view_checked_color" />

        <CheckBox
            android:id="@+id/weibo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="新浪微博"
            android:button="@drawable/selector_checkbox_checkmark"
            android:textColor="@color/share_view_checked_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp" >

        <CheckBox
            android:id="@+id/tencent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="QQ空间"
            android:button="@drawable/selector_checkbox_checkmark"
            android:textColor="@color/share_view_checked_color" />

        <CheckBox
            android:id="@+id/tencentWeibo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="腾讯微博"
            android:button="@drawable/selector_checkbox_checkmark"
            android:textColor="@color/share_view_checked_color" />
    </LinearLayout>

</LinearLayout>