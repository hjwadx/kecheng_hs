<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="267dp"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/checkbox_single"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:button="@drawable/selector_checkbox_checkmark"
            android:gravity="center"
            android:text="单周"
            android:textColor="@color/addcourse_weekdialog_btntext"
            android:textSize="15sp" />

        <View
            android:layout_width="@dimen/dimen_divider_thick_line"
            android:layout_height="fill_parent"
            android:background="@color/divider_bg" />

        <CheckBox
            android:id="@+id/checkbox_double"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:button="@drawable/selector_checkbox_checkmark"
            android:gravity="center"
            android:text="双周"
            android:textColor="@color/addcourse_weekdialog_btntext"
            android:textSize="15sp" />

        <View
            android:layout_width="@dimen/dimen_divider_thick_line"
            android:layout_height="fill_parent"
            android:background="@color/divider_bg" />

        <CheckBox
            android:id="@+id/checkbox_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:button="@drawable/selector_checkbox_checkmark"
            android:gravity="center"
            android:text="全选"
            android:textColor="@color/addcourse_weekdialog_btntext"
            android:textSize="15sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dimen_divider_thick_line"
        android:background="@color/divider_bg" />

    <fm.jihua.kecheng.ui.view.EditCourseTimeWeekRow
        android:id="@+id/addCourseWeekRow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/menubar_btn_icon_cancel" />

        <View
            android:layout_width="@dimen/dimen_divider_thick_line"
            android:layout_height="fill_parent"
            android:background="@color/divider_bg" />

        <ImageView
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/menubar_btn_icon_save" />
    </LinearLayout>

</LinearLayout>