<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:paddingLeft="12dp" android:background="@color/background"
		android:layout_weight="0"
		android:paddingRight="12dp" android:paddingBottom="15dp" android:id="@+id/timePicker">
		<kankan.wheel.widget.WheelView
			android:id="@+id/week_picker" android:layout_height="wrap_content"
			android:layout_weight="2"
			android:layout_width="wrap_content" />
		<kankan.wheel.widget.WheelView
			android:id="@+id/start_slot_picker" android:layout_height="wrap_content"
			android:layout_weight="3"
			android:layout_width="wrap_content" />
		<kankan.wheel.widget.WheelView
			android:id="@+id/slot_count_picker" android:layout_height="wrap_content"
			android:layout_weight="3"
			android:layout_width="wrap_content" />
</LinearLayout>
