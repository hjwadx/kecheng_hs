<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1"
        android:background="@color/app_background"
        android:fadingEdge="none" >

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:orientation="vertical" 
            android:background="@color/app_background">

            <LinearLayout
                android:id="@+id/ratingbar_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/white_bg_with_shadow"
                android:orientation="vertical" >

                <RatingBar
                    android:id="@+id/ratingbar"
                    style="@style/MyRatingBar"
                    android:stepSize="1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"/>
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击星形给课程评分"
                    android:textSize="10sp"
                    android:paddingTop="3dp"
                    android:paddingBottom="5dp"
                    android:layout_gravity="center"
                    android:textColor="@color/textcolor_80" />                   
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tag_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp"
                android:padding="8dp"
                android:background="@drawable/white_bg_with_shadow"
                android:orientation="vertical" >
            </LinearLayout>
            
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:textColor="@color/textcolor_80" 
                android:text="^_^ 你的评价都是匿名的，请放心选择哦。"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/renren"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="人人网"
                    android:textSize="14sp"
                    android:textColor="@color/share_view_checked_color" />

                <CheckBox
                    android:id="@+id/weibo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="新浪微博"
                    android:textSize="14sp"
                    android:textColor="@color/share_view_checked_color" />

                <CheckBox
                    android:id="@+id/tencent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QQ空间"
                    android:textSize="14sp"
                    android:textColor="@color/share_view_checked_color" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/tencentWeibo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="腾讯微博"
                    android:textSize="14sp"
                    android:textColor="@color/share_view_checked_color" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>