<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Wrapper"
    android:background="@drawable/bg_shadow"
    android:layout_marginRight="5dp"
     >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/plugin_layout"
            style="@style/menu_plugin_item" >

            <ImageView
                android:id="@+id/plugin_image"
                style="@style/menu_plugin_image"
                android:src="@drawable/menu_icon_widget_note" />

            <TextView
                android:id="@+id/plugin_text"
                style="@style/menu_plugin_text"
                android:text="我的笔记" />
        </LinearLayout>

        <ImageView
            android:id="@+id/menu_redpoint"
            android:visibility="gone"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignRight="@+id/plugin_layout"
            android:layout_alignTop="@+id/plugin_layout"
            android:layout_margin="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/shape_menubtn_redpoint_with_white_border" />
    </RelativeLayout>

</LinearLayout>