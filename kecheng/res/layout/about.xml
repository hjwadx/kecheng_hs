<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="8dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/register_logo" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_bg_with_shadow"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical"  >

                <LinearLayout
                    android:id="@+id/feedback_parent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_item_selector_linearlayout_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/home_menu_core_item_height"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="当前版本"
                        android:textColor="@color/textcolor_4c"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/version"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical|right"
                        android:textColor="@color/textcolor_80"
                        android:textSize="15sp" />

                </LinearLayout>
                
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/divider_bg"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/about_parent"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_item_selector_linearlayout_bg"
                    android:gravity="center_vertical"
                    android:minHeight="@dimen/home_menu_core_item_height"
                    android:orientation="horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/about"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="更新日志"
                        android:textColor="@color/textcolor_4c"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/myprofile_list_icon_arrow" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VI Design by"
                android:textColor="@color/textcolor_66"
                android:textSize="17sp" />
        
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/setting_about_collaboration" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="kechenggezi.com"
                android:textColor="@color/textcolor_4c"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:text="Copyright © CreatingEv 2013 All Rights Reserved"
                android:textColor="@color/textcolor_80"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>