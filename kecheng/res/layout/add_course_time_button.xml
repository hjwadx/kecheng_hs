<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_course_time_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:layout_marginLeft="10dp"
        android:id="@+id/iv_delete"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/add_new_class_icon_addtime" />

    <TextView
        android:gravity="center"
        android:id="@+id/add_course_time"
        style="@style/style_horizontal_layout"
        android:background="@drawable/white_bg_with_shadow"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:text="添加更多课程时间"
        android:textColor="@color/textcolor_80"
        android:textSize="17sp" />

</LinearLayout>