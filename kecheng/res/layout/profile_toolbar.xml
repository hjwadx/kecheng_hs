<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_toolbar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/toolbar_shadow" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/add_friend"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white_item_selector_linearlayout_bg"
            android:onClick="onClick" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/friendprofile_toolbar_icon_addfriend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加好友"
                android:textColor="@color/textcolor_66"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/remove_friend"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white_item_selector_linearlayout_bg"
            android:onClick="onClick"
            android:visibility="gone" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/friendprofile_toolbar_icon_deletefriend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除好友"
                android:textColor="@color/textcolor_66"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:background="@color/divider_bg" />

        <LinearLayout
            android:id="@+id/chat"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white_item_selector_linearlayout_bg"
            android:onClick="onClick" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/friendprofile_toolbar_icon_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发消息"
                android:textColor="@color/textcolor_66"
                android:textSize="13sp" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="30dp"
            android:background="@color/divider_bg" />

        <LinearLayout
            android:id="@+id/view_coruses"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/white_item_selector_linearlayout_bg"
            android:onClick="onClick" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/friendprofile_toolbar_icon_view" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="看课表"
                android:textColor="@color/textcolor_66"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>